<div class="main_chat">
  <div class="chat_header">
    <div class="title">
      テスト
    </div>
    <div class="chat_end">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
  <div class="chat">
    <div class="message">
      <div class="upper_message">
        <div class="message_user">
          山﨑卓也
        </div>
        <div class="message_date">
          2020/9/28(Mon)12:38:13
        </div>
      </div>
      <div class="lower_message">
        おはよう
      </div>
    </div>
  </div>

  <%= form_with model: [@room, @message], html: {class: "form"}, local: true do |f| %>
    <div class="form_input">
      <%= f.text_field :content, class: 'type_a_message', placeholder: 'type a message' %>
      <label class="form-image">
        <span class="image-file">画像</span>
        <%= f.file_field :image, class: 'hidden' %>
      </label>
    </div>
      <%= f.submit '送信', class: 'send' %>
  <% end %>
</div>